<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/paymentAcceptedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/payment_accepted"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/logoGreen"
        android:textIsSelectable="false"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.186"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.114" />

    <TextView
        android:id="@+id/paymentAcceptedText1"
        android:layout_width="296dp"
        android:layout_height="29dp"
        android:layout_marginTop="30dp"
        android:text="@string/congrats_you_weren_t_the_last_one"
        android:textAlignment="textStart"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/paymentAcceptedText"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/paymentAcceptedText2"
        android:layout_width="296dp"
        android:layout_height="64dp"
        android:layout_marginTop="20dp"
        android:text="@string/your_payment_has_been_accepted_and_will_be_processed_once_all_of_the_items_have_been_selected"
        android:textAlignment="textStart"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/paymentAcceptedText1"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/paymentAcceptedText3"
        android:layout_width="296dp"
        android:layout_height="25dp"
        android:layout_marginTop="20dp"
        android:text="@string/better_late_then_never"
        android:textAlignment="textStart"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/paymentAcceptedText2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/paymentAcceptedText4"
        android:layout_width="296dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:text="@string/we_ll_notify_you_once_your_payment_has_been_processed"
        android:textAlignment="textStart"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/paymentAcceptedText3"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/homeButton"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:background="@drawable/button"
        android:paddingLeft="100dp"
        android:paddingRight="100dp"
        android:text="@string/home"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textSize="15sp"
        app:backgroundTint="@null"
        app:icon="@drawable/ic_baseline_home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/paymentAcceptedText4"
        app:layout_constraintVertical_bias="0.206" />

    <Button
        android:id="@+id/viewBillDetailsButton"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:paddingLeft="65dp"
        android:paddingRight="65dp"
        android:text="@string/view_bill_details"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textSize="15sp"
        app:backgroundTint="@null"
        app:icon="@drawable/ic_baseline_list"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeButton"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
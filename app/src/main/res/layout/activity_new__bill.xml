<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".New_Bill">

    <TextView
        android:id="@+id/newBillText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_bill"
        android:textColor="@color/logoGreen"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.186"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.114"/>

    <Button
        android:id="@+id/createNewBillButton"
        android:layout_width="212dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/format_button"
        android:text="@string/create_new_bill"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        app:backgroundTint="@null"
        app:icon="@drawable/ic_newbill_filled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newBillText"
        app:layout_constraintVertical_bias="0.0"/>

    <Button
        android:id="@+id/joinBillButton"
        android:layout_width="212dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/format_button"
        android:text="@string/join_bill"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        app:backgroundTint="@null"
        app:icon="@drawable/ic_joinbill"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createNewBillButton"
        app:layout_constraintVertical_bias="0.0"/>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_bottom"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:itemBackground="@color/logoGreen"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:menu="@menu/nav_bar">


    </com.google.android.material.bottomnavigation.BottomNavigationView>
</androidx.constraintlayout.widget.ConstraintLayout>